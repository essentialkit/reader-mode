{
  "name": "reader-mode",
  "version": "1.0.0",
  "description": "Chrome and Firefox extension starter with Typescript, ESBuild and E2E tests",
  "homepage": "https://readermode.org",
  "scripts": {
    "build": "node tools/esbuild.js",
    "test": "node tools/esbuild.js test",
    "start": "node tools/esbuild.js start",
    "start:firefox": "node tools/esbuild.js start --browser=firefox",
    "generateIcons": "node tools/esbuild.js generateIcons",
    "updateTranslations": "node tools/translateMessages.js"
  },
  "author": "Justice Ogbonna",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/justiceo/reader-mode"
  },
  "keywords": [
    "kindle",
    "reader",
    "page cleaner",
    "adblocker",
    "cookie notice",
    "popup blocker",
    "medium style",
    "chrome",
    "firefox",
    "opera",
    "safari",
    "addon",
    "extension"
  ],
  "devDependencies": {
    "@types/chrome": "^0.0.204",
    "@types/jasmine": "^4.3.1",
    "@types/node": "^18.11.14",
    "@types/puppeteer": "^7.0.4",
    "esbuild": "0.16.4",
    "google-translate-api-x": "^10.5.2",
    "jasmine": "^4.5.0",
    "jimp": "^0.16.2",
    "puppeteer": "^19.4.0"
  },
  "dependencies": {
    "@sentry/browser": "^7.36.0",
    "@webcomponents/webcomponentsjs": "^2.7.0",
    "lit": "^2.6.0"
  }
}
